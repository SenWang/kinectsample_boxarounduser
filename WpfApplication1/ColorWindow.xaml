<Window x:Class="WpfApplication1.ColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColorWindow" Height="480" Width="1280">
    <StackPanel Orientation="Horizontal">
        <Canvas x:Name="Canvas" Height="480" Width="640">
            <Image x:Name="ColorData" />
            <Rectangle x:Name="UserBorder"  Width="200" Height="200" 
                       Stroke="Green" StrokeThickness="2"/>
        </Canvas>    
        <Image x:Name="DepthData" Height="480" Width="640"/>
    </StackPanel>     
</Window>
